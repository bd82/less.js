{
    "name": "@less/root",
    "private": true,
    "version": "1000.0.0",
    "description": "Less monorepo",
    "homepage": "http://lesscss.org",
    "devDependencies": {
        "@types/chai": "^4.2.1",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.7.4",
        "glob": "^7.1.4",
        "chai": "^4.2.0",
        "lerna": "^3.16.4",
        "mocha": "^6.2.0",
        "ts-mocha": "^6.0.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.2",
        "npm-run-all": "^4.1.5",
        "shx": "^0.3.2",
        "husky": "3.0.9",
        "lint-staged": "9.4.2",
        "prettier": "1.18.2"
    },
    "scripts": {
        "ci": "lerna run ci && yarn run format:validate",
        "format:fix": "prettier --write \"**/*.@(ts|js|json|md)\"",
        "format:validate": "prettier --check \"**/*.@(ts|js|json|md)\""
    },
    "bugs": {
        "url": "https://github.com/less/less.js/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/less/less.js.git"
    },
    "master": {
        "url": "https://github.com/less/less.js/blob/master/",
        "raw": "https://raw.githubusercontent.com/less/less.js/master/"
    },
    "license": "(Apache-2.0 or MIT)",
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/@types/jasmine"
        ]
    },
    "prettier": {
        "endOfLine": "lf"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,md,json}": [
            "prettier --write",
            "git add"
        ]
    }
}
